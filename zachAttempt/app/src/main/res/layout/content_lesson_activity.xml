<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".lesson_activity"
    android:background="#6c697fff"
    tools:showIn="@layout/activity_lesson_activity">


    <TextView
        android:id="@+id/txt_wtd_username"
        android:layout_width="101dp"
        android:layout_height="19dp"
        android:layout_marginEnd="276dp"
        android:layout_marginRight="276dp"
        android:text="@string/username"
        android:textColor="#efff0012"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_wtd_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/version_1_0_alpha"
        android:textColor="#efff0012"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/image_im"
        android:layout_width="168dp"
        android:layout_height="92dp"
        app:srcCompat="@android:drawable/presence_away"
        tools:layout_editor_absoluteX="108dp"
        tools:layout_editor_absoluteY="40dp" />

    <TextView
        android:id="@+id/desc_txt"
        android:layout_width="265dp"
        android:layout_height="194dp"
        android:layout_marginBottom="156dp"
        android:layout_marginEnd="56dp"
        android:layout_marginRight="56dp"
        android:text="Text to be displaye by database"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</android.support.constraint.ConstraintLayout>